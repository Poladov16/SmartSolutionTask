
@model IEnumerable<SmartSTask.Models.ViewModels.UserViewModel>

@{ ViewData["Title"] = "Index"; }
<a class="navbar-brand" style="float:right" asp-controller="Account" asp-action="Login">Log Out</a>
<h1>Users</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Organization.OrganizationName)
            </th>
            <th>
                <a>Task Title</a>
                @*@Html.DisplayNameFor(model => model.Task.Description)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAdmin)
            </th>
            <th></th>
            <th>
                <a asp-controller="ManageTask" class="badge"><i class="far fa-plus-square"></i>Tasks</a>
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i>Add User</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    @*<td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.Organization.OrganizationName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Task.Description)
    </td>
    <td>
        @if (item.IsAdmin)
        {
@Html.Raw(string.Format("<input checked=\"checked\" disabled type=\"checkbox\" id=\"\" name=\"\" value=\"Bike\">")) }
else
{
@Html.Raw(string.Format("<input disabled type=\"checkbox\">"))}
    </td>
    <td>
        <a asp-action="AddOrEdit" asp-route-id="@item.Id"><i class="fa fa-marker fa-lg"></i>Edit</a> |
        <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1" onclick="return confirm('Are you sure to Delete this Task?')"><i class="fa fa-trash-alt fa-lg"></i>Delete</a>
    </td>
</tr>
}
    </tbody>
</table>


