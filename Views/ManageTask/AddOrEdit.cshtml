@model SmartSTask.Models.ViewModels.ManageTaskViewModel

@{ ViewData["Title"] = "AddOrEdit"; }
<a class="navbar-brand" style="float:right" asp-controller="Account" asp-action="Login">Log Out</a>
<h4>Create Task</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-antiforgery="true" action="AddOrEdit" method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline"></label>
                <input min="@DateTime.Now.ToShortDateString()" type="date" asp-for="Deadline" class="form-control" />

            </div>
            <input hidden value="@Model?.TaskId" name="TaskId" />
            <label for="">Description:</label><br />
            <textarea asp-for="Description" id="descriptionId" name="description" rows="4" cols="50"></textarea>
            <br /><br />

            <label for="lname">User Name:</label><br />
        <select asp-for="TaskUserId" class="form-select" aria-label="" name="TaskUserId">
            <option value="0" selected>Select User</option>
                @foreach (var user in Model?.AssignedUsers)
                {
                    <option value="@user.Id">@user.FirstName @user.LastName</option>
                }
        </select><br><br> 

            <label for="lname">Status:</label><br />
            <select asp-for="Status" class="form-select" aria-label="" name="Status">
                <option selected>Choose Status</option>
                <option value="1">Done</option>
                <option value="2">In progress</option>
                <option value="3">Cancel</option>
            </select><br><br>
            <input type="submit" value="Submit">

            <a asp-action="Index" class="form-group col-md-6">Cancel</a>

        </form>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>

